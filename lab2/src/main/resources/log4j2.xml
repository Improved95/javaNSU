<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>

        <File name="CalculatorLogTRACE" fileName="logs/calculatorLogTRACE.log" append="false">
            <PatternLayout>
                <Pattern>%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Pattern>
            </PatternLayout>
        </File>
        <File name="CalculatorLogDEBUG" fileName="logs/calculatorLogDEBUG.log" append="false">
            <PatternLayout>
                <Pattern>%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Pattern>
            </PatternLayout>
        </File>
        <File name="CalculatorLogINFO" fileName="logs/calculatorLogINFO.log" append="false">
            <PatternLayout>
                <Pattern>%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Pattern>
            </PatternLayout>
        </File>
        <File name="CalculatorLogWARN" fileName="logs/calculatorLogWARN.log" append="false">
            <PatternLayout>
                <Pattern>%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Pattern>
            </PatternLayout>
        </File>
        <File name="CalculatorLogERROR" fileName="logs/calculatorLogERROR.log" append="false">
            <PatternLayout>
                <Pattern>%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Pattern>
            </PatternLayout>
        </File>

    </Appenders>

    <Loggers>

<!--        <Logger name="" level="debug" additivity="false">-->
<!--            <AppenderDef ref = "" />-->
<!--        </Logger>-->

        <Root level="trace">
            <AppenderRef ref="CalculatorLogTRACE" />
            <AppenderRef ref="CalculatorLogDEBUG" level="debug"/>
            <AppenderRef ref="CalculatorLogINFO" level="info"/>
            <AppenderRef ref="CalculatorLogWARN" level="warn"/>
            <AppenderRef ref="CalculatorLogERROR" level="error"/>
        </Root>

    </Loggers>

</Configuration>